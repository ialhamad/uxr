extends /specs/products/aps/page-structure/structure/templates/structure/layout-tmpl.jade
block content

    include /specs/page-structure/helpers/print-json-mixin.jade
    include /specs/page-structure/helpers/print-js-code-mixin.jade

    .source_info
        p We are showing the different image ratio sizes and their names. The template is used only for the logo image.
    section.source_section
        h2 Usage
        h3 Include template
        +printJsCode('include /specs/ux3/basic/images/templates/images/images-tmpl.jade')
        h3 Data
        p The following data structure must exist to be able to use images template.
        +printJson({
            "thisWidget": {
                "properties": {
                    "link": "#",
                    "src": "/specs/products/aps/releasedAssets/images/widgets/images/thumb-small.png",
                    "alt": "thumb-small"
                }
            }

        })
        markdown


    section.source_section
        h2 Basic image types

        h3 Logo
        .source_example
            | !{pb.render("images", {"thisWidget": {"properties": {"link": "#", "src":"/specs/products/aps/releasedAssets/images/logo.png", "alt": "logo"}}}, {"shared": {"model": {"config": {"wrapper": "false"}}}})}

        h3 Large thumbnail
        .source_example
            | !{pb.render("images", {"thisWidget": {"properties": {"link": "#", "src":"/specs/products/aps/releasedAssets/images/thumb-large.png", "alt": "Large thumbnail"}}}, {"shared": {"model": {"config": {"wrapper": "false"}}}})}

        h3 Small thumbnail
        .source_example
            | !{pb.render("images", {"thisWidget": {"properties": {"link": "#", "src":"/specs/products/aps/releasedAssets/images/thumb-small.png", "alt": "Small thumbnail"}}}, {"shared": {"model": {"config": {"wrapper": "false"}}}})}

        h3 Issue cover image
        .source_example
            | !{pb.render("images", {"thisWidget": {"properties": {"link": "#", "src":"/specs/products/aps/releasedAssets/images/cover.png", "alt": "Issue cover image"}}}, {"shared": {"model": {"config": {"wrapper": "false"}}}})}
                
    | #{''}