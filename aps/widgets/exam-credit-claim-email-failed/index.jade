extends /specs/products/aps/page-structure/structure/templates/structure/layout-tmpl.jade

block content

    section.source_section

        include /specs/page-structure/helpers/print-json-mixin.jade
        include /specs/page-structure/helpers/print-js-code-mixin.jade

        h2 Exam credit claim mail failed
            h3 Include template
            +printJsCode('include /specs/ux3/widgets/exam-credit-claim-email-failed/templates/exam-credit-claim-email-failed/exam-credit-claim-email-failed-tmpl.jade')
        h3 Data
        markdown
            p The following the JSON structure must exist to be able to use Exam credit claim mail failed template.
        +printJson({
            "data": {
                "exam": {
                    "ShowCertificateLink": "http://thoracic-test.literatumonline.com/action/showExamCertificate?doi=10.1164%2Fatscme_course%3Bajrccm_194_12_1458",
                    "examEvaluationlink": "http://thoracic-test.literatumonline.com/action/evaluateExam?doi=10.1164%2Fatscme_course%3Bajrccm_194_12_1458"
                }
            },
            "errors": []
        })
    | #{''}

    section.source_section
        h2 Example
        p The following example demonstrates Exam credit claim mail failed.
        .source_example
            .container
                | !{pb.render("exam-credit-claim-email-failed", "data.json")}