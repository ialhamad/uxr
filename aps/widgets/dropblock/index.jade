extends /specs/products/aps/page-structure/structure/templates/structure/layout-tmpl.jade
block content

    include /specs/page-structure/helpers/print-json-mixin.jade
    include /specs/page-structure/helpers/print-js-code-mixin.jade
    include /specs/page-structure/helpers/print-html-code-mixin.jade

    section.source_section
        h2 Dropblock template
        h3 Include template
        +printJsCode('include /specs/ux3/widgets/dropblock/templates/dropblock/dropblock-tmpl.jade')
        h3 Data
        p The following data structure must exist to be able to use Dropblock template.
        +printJson({
            "model": {
                "data": {
                    "name": "TestDropBlock"
                }
            }

        })
    | #{''}

    section.source_section
        h2 Dropblock example
        p Use the following snippet if you want to place a dropblock in your spec template.
        +printJsCode('!{pb.render("dropblock")}')
        .source_example
            .dropBlock
                | !{pb.render('dropblock')}
    | #{''}